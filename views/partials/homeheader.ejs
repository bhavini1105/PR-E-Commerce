<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flipkart Clone</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .banner {
            background: linear-gradient(135deg, #9526d1, #6a4de3);
            height: 300px;
            background-image: url('https://cdn.pixabay.com/photo/2017/06/13/22/42/plane-2403976_1280.png');
            background-repeat: no-repeat;
            background-position: center left;
            background-size: contain;
            padding: 2rem;
            color: white;
        }

        .category-icon {
            font-size: 14px;
            color: black;
            text-decoration: none;
        }

        .dropdown-toggle::after {
            margin-left: 5px;
        }

        .carousel-inner img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
        }

        .carousel-indicators [data-bs-target] {
            background-color: #000;
            width: 12px;
            height: 4px;
            border-radius: 10px;
        }

        .carousel-indicators .active {
            background-color: #007bff;
        }

        .carousel {
            margin-top: 20px;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand text-primary fw-bold" href="#">Flipkart <span class="text-warning">Explore
                    Plus</span></a>
            <form class="d-flex mx-auto w-50">
                <input class="form-control" type="search" placeholder="Search for Products, Brands and More">
            </form>
            
            <div class="d-flex align-items-center gap-3">
                <a href="/login" class="btn btn-outline-primary d-flex align-items-center gap-1 px-3 py-1">
                  <i class="fa-solid fa-user"></i>
                  <span>Login</span>
                </a>
                <a href="/cart" class="btn btn-outline-warning d-flex align-items-center gap-1 px-3 py-1 position-relative">
                  <i class="fa-solid fa-cart-shopping"></i>
                  <span>Cart</span>
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    <%= cartCount %>
                  </span>
                  
                  </span>
                </a>
              </div>
              
        </div>
    </nav>

    <!-- Categories with Dropdowns -->
    <div class="container py-3">
        <div class="container py-3">
            <div class="row text-center">
                <% catData.forEach(cat=> { %>
                    <div class="col dropdown">
                        <a class="dropdown-toggle category-icon" href="#" id="dropdown<%= cat.id %>" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/<%= cat.image %>" width="50" height="50" alt="<%= cat.name %>"><br>
                            <%= cat.name %>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="dropdown<%= cat._id %>">
                            <% const relatedSub=subData.filter(sub=> sub.categoryId.toString() === cat.id.toString());
                                relatedSub.forEach(sub => {
                                %>
                                <li class="dropdown-submenu px-2">
                                    <a class="category-icon" href="/subcat/<%= sub._id %>">
                                        <%= sub.name %>
                                    </a>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <% }) %>
            </div>
        </div>

    </div>