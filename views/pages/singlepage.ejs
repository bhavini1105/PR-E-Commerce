<%- include("../partials/homeheader") %>

<div class="container my-5">
    <div class="row shadow-lg p-4 bg-white rounded">
        <!-- Left Side: Product Image -->
        <div class="col-md-5 text-center border-end">
            <img src="/<%= extra.image %>" alt="<%= extra.name %>" class="img-fluid" style="max-height: 400px; object-fit: contain;">
        </div>

        <!-- Right Side: Product Details -->
        <div class="col-md-7 px-4">
            <h3 class="fw-bold"><%= extra.name %></h3>

            <p class="mt-3 text-muted fs-6"><strong>Description:</strong> <%= extra.description %></p>

            <h4 class="text-success mt-3">â‚¹ <%= extra.price %></h4>

            <% if (extra.subcatId) { %>
                <p class="text-secondary"><strong>Subcategory:</strong> <%= extra.subcatId.name %></p>
            <% } %>

            <div class="d-flex gap-3 mt-4">
                <a href="/add-to-cart/<%= extra._id %>" class="btn btn-warning px-4 py-2 fw-semibold">ADD TO CART</a>
                <a href="/home" class="btn btn-outline-primary px-4 py-2 fw-semibold">BACK TO HOME</a>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/homefooter") %>
