<%- include("../partials/homeheader") %>

<div class="container">
  <h2>Extra Categories for Subcategory: <%= subCategory.name %></h2>

  <div class="row">
    <% if (subCategories.length > 0) { %>
      <% subCategories.forEach(extra => { %>
        <div class="col-md-3 mb-4">
          <a href="/extra/view/<%= extra._id %>" class="text-decoration-none text-dark">
            <div class="card h-100 shadow-sm">
              <img src="/<%= extra.image %>" class="card-img-top" alt="<%= extra.name %>" style="height: 200px; object-fit: cover;">
              <div class="card-body">
                <h5 class="card-title"><%= extra.name %></h5>
                <p class="card-text"><%= extra.description %></p>
                <% if (extra.subcatId && extra.subcatId.name) { %>
                  <span class="badge bg-primary"><%= extra.subcatId.name %></span>
                <% } %>
              </div>
              <a href="/extra/view/<%= extra._id %>" class="btn btn-warning">VIEW</a>
            </div>
          </a>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <p class="text-muted">No extra categories found for this subcategory.</p>
        <a href="/home" class="btn btn-outline-primary px-4 py-2 fw-semibold">BACK TO HOME</a>
      </div>
    <% } %>
  </div>
</div>

<%- include("../partials/homefooter") %>
