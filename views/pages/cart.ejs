<!doctype html>
<html lang="en">

<head>
    <title>Cart</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <style>
        .cart-container {
            max-width: 900px;
            margin: 40px auto;
        }

        .empty-cart-message {
            font-size: 1.2rem;
            color: #888;
            text-align: center;
            padding: 40px 0;
            border: 2px dashed #ccc;
            border-radius: 12px;
        }

        .card {
            border-radius: 15px;
        }

        .card-body h5 {
            font-weight: bold;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0069d9;
        }
    </style>

</head>


<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand text-primary fw-bold" href="#">Flipkart <span class="text-warning">Explore
                    Plus</span></a>
            <form class="d-flex mx-auto w-50">
                <input class="form-control" type="search" placeholder="Search for Products, Brands and More">
            </form>

            <div class="d-flex align-items-center gap-3">
                <a href="/login" class="btn btn-outline-primary d-flex align-items-center gap-1 px-3 py-1">
                    <i class="fa-solid fa-user"></i>
                    <span>Login</span>
                </a>
                <a href="/cart"
                    class="btn btn-outline-warning d-flex align-items-center gap-1 px-3 py-1 position-relative">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <span>Cart</span>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        <%= cartCount %>
                    </span>

                    </span>
                </a>
            </div>

        </div>
    </nav>

    <div class="container cart-container">
        <h2 class="mb-4">Your Cart</h2>
    
        <% if (cart.length === 0) { %>
            <div class="empty-cart-message">
                <p>Your cart is empty ðŸ›’</p>
                <a href="/home" class="btn btn-primary mt-3">Continue Shopping</a>
            </div>
        <% } else { %>
    
            <% cart.forEach(item => { %>
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="/<%= item.image %>" height="300px" width="300px" class="img-fluid"
                                alt="<%= item.name %>">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.name %></h5>
                                <p class="card-text">Price: â‚¹<%= item.price %></p>
    
                                <% if (item.subcatId) { %>
                                    <p class="card-text"><strong>Subcategory:</strong> <%= item.subcatId.name %></p>
                                <% } %>
    
                                <p class="card-text">
                                    Quantity:
                                    <a href="/decrease-qty/<%= item._id %>" class="btn btn-sm btn-danger">-</a>
                                    <span class="mx-2"><%= item.quantity %></span>
                                    <a href="/increase-qty/<%= item._id %>" class="btn btn-sm btn-success">+</a>
                                </p>
    
                                <p class="card-text fw-bold">Total: â‚¹<%= item.price * item.quantity %></p>
    
                                <a href="/remove-from-cart/<%= item._id %>" class="btn btn-danger">Remove</a>
                                <a href="/home" class="btn btn-primary ms-2">Back to Home</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
    
        <% } %>
    </div>
    

    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>